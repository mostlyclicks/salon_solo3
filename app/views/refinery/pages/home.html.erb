<%#= render '/refinery/content_page' %>

<div id="intro">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 text-center" >
        <%= image_tag 'salonsolo5b-2.png', id: 'logo', class: 'img-responsive' %>
      </div>
    </div>
  </div>
</div>

<% content_for :promos do %>
<section id="chalk">
	<div class="container">
		<div class="row">
			<div class="col-md-4" id="chalk5">
			<%= raw @page.content_for(:promo_1) %>
			</div>
			<div class="col-md-4" id="chalk5">
			<%= raw @page.content_for(:promo_2) %>
			</div>
			<div class="col-md-4" id="chalk5">
			<%= raw @page.content_for(:promo_3) %>
      </div>
			
		</div>
	</div>
</section>
<% end %>

<% if @page.content_for(:promo_1).present? %>
	<%= yield :promos %>
<% end %>

<section id="services">
	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-xs-offset-4 col-sm-offset-0 col-sm-3">
				<%= image_tag 'mirror-solo.png', class: 'img-responsive' %>
			</div>
			<div class="col-md-9">
				<div class="row">
					<div class="col-md-4 service_buckets">
						<%= image_tag 'staff-home-lori-sm.jpg', class: "img-circle" %>
						<h3>Lori Gautsch</h3>
						<p>Haircuts, color and style</p>
						<%= image_tag 'staff-home-jennie-sm.png', class: "img-circle" %>
						<h3>Jennie Brudos</h3>
						<p>Haircuts, color and style</p>

					</div>
					<div class="col-md-4">
						<%= image_tag 'staff-home-Tiffany-sm.jpg', class: "img-circle" %>
						<h3>Tiffany Heimer</h3>
						<p>Haircuts, color and style</p>
						<%= image_tag 'staff-home-joy-sm.jpg', class: "img-circle" %>
						<h3>Joy Stoleson</h3>
						<p>Massage therapy</p>
					</div>
					<div class="col-md-4">
						<%= image_tag 'staff-home-leah-sm.png', class: "img-circle" %>
						<h3>Leah Turk</h3>
						<p>Haircuts, color and style</p>
						
				</div>
				
			</div>
		</div>
	</div>
</section>

<section id="menu">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Menu of Services</h1>
				<div class="row" id="table-section">
					<div class="col-md-4 col-md-offset-2">
						<%= raw @page.content_for(:hair) %>
            			<%= raw @page.content_for(:color) %>	
					</div>
					<div class="col-md-4">
						<%= raw @page.content_for(:massage) %>
					</div>

					
				</div>
				<p class="text-center">We are currently not offering nail, body waxing and skin care services at the moment but please check back later.</p>

			</div>
		</div>
	</div>
</section>
